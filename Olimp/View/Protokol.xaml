<Page x:Class="Olimp.View.Protokol"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olimp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Protokol">

    <Grid>
        <Grid Width="300" Height="400">
            <ListView x:Name="listviewProtocol"  
       SelectionChanged="listviewProtocol_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=FullName}" 
          Header="ID" Width="50"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=BirthDate}" 
          Header="Олимпиада" Width="125"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Email}" 
          Header="Статус" Width="125"/>
                       
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Page>
