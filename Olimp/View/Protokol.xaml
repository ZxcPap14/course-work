<Page x:Class="Olimp.View.Protokol"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olimp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Protokol">

    <Grid>
        <ListView x:Name="ProtocolsListView" ItemsSource="{Binding Protocols}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название олимпиады" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
