<Page x:Class="Olimp.View.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olimp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel Margin="50">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="usernameTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="passwordBox" Margin="0,5,0,10"/>
            <Button Content="Login" Click="Login_Click" HorizontalAlignment="Center"/>
            <TextBlock x:Name="Info" Margin="0,40,0,0" TextAlignment="Center" Text=" " Width="204"></TextBlock>
        </StackPanel>
        <Button Width="150" Height="30" VerticalAlignment="Bottom" Content="Войти без регистрации" Opacity="1" Click="NonReg"></Button>
    </Grid>
</Page>
