<Page x:Class="Olimp.View.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olimp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1300"
      Title="AuthPage">

    <Grid>
        <StackPanel Margin="50" VerticalAlignment="Center" HorizontalAlignment="Center"> 
            <TextBlock  Text="Username:"  Width="500"/>
            <TextBox Background="#8B9FB4"   x:Name="usernameTextBox" Width="500" Height="30" Margin="0,5,0,10" TextChanged="usernameTextBox_TextChanged"/>
            <TextBlock   Text="Password:" Width="500"/>
            <PasswordBox  Background="#8B9FB4" x:Name="passwordBox" Width="500" Height="30" Margin="0,5,0,10"/>
            <Button  Background="#3498DB" Width="100" Content="Login" Click="Login_Click" HorizontalAlignment="Center"/>
        </StackPanel>
        <Button Background="#3498DB"  Width="150" Height="30" VerticalAlignment="Bottom" Content="Войти без регистрации" Opacity="1" Click="NonReg"></Button>
    </Grid>
</Page>
